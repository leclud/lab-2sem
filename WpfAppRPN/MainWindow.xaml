<Window x:Class="WpfAppRPN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="500" Width="600">
    <Grid>
        <Label Content="Expression:" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="tbExpression" HorizontalAlignment="Left" Height="23" Margin="74,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" />
        <Label Content="Variable x:" HorizontalAlignment="Left" Margin="5,30,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="tbVariable" HorizontalAlignment="Left" Height="23" Margin="74,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" />
        <Button x:Name="btnCalculate" Content="Calculate" HorizontalAlignment="Left" Margin="5,55,0,0" VerticalAlignment="Top" Width="75" Click="btnCalculate_Click" />
        <Label Content="Result:" HorizontalAlignment="Left" Margin="5,80,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="tbResult" HorizontalAlignment="Left" Height="23" Margin="74,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" IsReadOnly="True" />
    </Grid>
</Window>